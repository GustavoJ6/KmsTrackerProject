<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5CAD7"
    tools:context=".LitersToKmsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LittersAsk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewLiters1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="Insert total liters: "
            android:textColor="@color/black"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/totalLiters1"
            android:layout_width="247dp"
            android:layout_height="50dp"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLiters1" />

        <Button
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#0CEA15"
            android:onClick="calculate1"
            android:scaleX="0.35"
            android:scaleY="0.8"
            app:layout_constraintStart_toStartOf="@+id/totalLiters1"
            app:layout_constraintTop_toTopOf="@+id/totalLiters1" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_marginStart="256dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#F10202"
            android:onClick="clear"
            android:scaleX="0.50"
            android:scaleY="0.9"
            android:text="Clear"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/totalLiters1"
            app:layout_constraintTop_toTopOf="@+id/totalLiters1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>